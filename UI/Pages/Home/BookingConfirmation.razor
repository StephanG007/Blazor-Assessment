@using Contracts.Bookings

<div class="dx-card confirmation-card">
    <h2 class="section-header">Booking confirmed!</h2>
    <p class="confirmation-text">
        Your appointment at <strong>@Confirmation.ClinicName</strong> is scheduled for
        <strong>@Confirmation.StartTime.ToLocalTime().ToString("dddd, dd MMMM yyyy HH:mm")</strong>.
    </p>
    <ul class="confirmation-list">
        <li><strong>Patient:</strong> @Confirmation.PatientName (@Confirmation.PatientEmail)</li>
        @if (!string.IsNullOrWhiteSpace(Confirmation.Notes))
        {
            <li><strong>Notes:</strong> @Confirmation.Notes</li>
        }
    </ul>
</div>

@code {
    [Parameter, EditorRequired]
    public BookingDetailsResponse Confirmation { get; set; } = default!;
}
