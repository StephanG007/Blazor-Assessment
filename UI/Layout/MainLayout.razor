@inherits LayoutComponentBase

<div class="dx-viewport layout-shell">
    <aside class="layout-drawer @( _drawerOpen ? "open" : "" )">
        <div class="drawer-header">
            <div class="drawer-title">Clinic Booking</div>
            <div class="drawer-subtitle">Plan your next visit</div>
        </div>
        <NavMenu />
    </aside>

    <div class="layout-main">
        <header class="layout-appbar">
            <button type="button"
                    class="dx-button dx-button-mode-text dx-button-has-icon layout-menu-button"
                    aria-label="Toggle navigation"
                    @onclick="ToggleDrawer">
                <span class="dx-button-content"><i class="dx-icon dx-icon-menu"></i></span>
            </button>
            <span class="appbar-title">Clinic Booking Portal</span>
            <div class="appbar-spacer"></div>
            <LoginBar />
        </header>

        <main class="layout-container">
            @Body
        </main>
    </div>
</div>

@code {
    private bool _drawerOpen = false;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
