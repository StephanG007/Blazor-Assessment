@namespace UI.Components.Bookings

<MudCard Class="@CardClass" Elevation="@(Selected ? 8 : 2)" @onclick="HandleClick">
    <MudCardContent>
        <MudText Typo="Typo.h6">@Clinic.Name</MudText>
        <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">@Clinic.DisplayLocation</MudText>
        <MudText Typo="Typo.body2" Class="slot-summary">@Clinic.SlotSummary</MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter, EditorRequired]
    public ClinicSummary Clinic { get; set; } = default!;

    [Parameter]
    public bool Selected { get; set; }

    [Parameter]
    public EventCallback<ClinicSummary> OnSelected { get; set; }

    private string CardClass => Selected ? "clinic-card clinic-card--selected" : "clinic-card";

    private Task HandleClick() => OnSelected.InvokeAsync(Clinic);
}
